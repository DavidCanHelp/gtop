{
  "name": "gtop",
  "version": "1.1.5",
  "description": "graphic top",
  "main": "./index.js",
  "types": "./index.d.ts",
  "bin": {
    "gtop": "./bin/gtop"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "./bin/gtop",
    "lint": "eslint lib/ --fix && prettier --single-quote --trailing-comma es5 --write 'lib/**/*.js'",
    "lint-check": "eslint lib/ && prettier --check --single-quote --trailing-comma es5 'lib/**/*.js'",
    "prepublishOnly": "marked-man --version $npm_package_version --manual 'Gtop Help' --section 1 ./CLI.md > gtop.1",
    "prepare": "husky"
  },
  "lint-staged": {
    "lib/**/*.js": [
      "eslint --fix",
      "prettier --single-quote --trailing-comma es5 --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "man": [
    "./gtop.1"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aksakalli/gtop.git"
  },
  "keywords": [
    "system",
    "monitoring",
    "top",
    "chart",
    "monitor",
    "dashboard",
    "os"
  ],
  "author": "aksakalli",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aksakalli/gtop/issues"
  },
  "homepage": "https://github.com/aksakalli/gtop#readme",
  "dependencies": {
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "systeminformation": "^5.27.7"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "marked-man": "^1.3.3",
    "prettier": "1.19.1"
  }
}
